{
  "name": "sample-be",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "start:watch": "NODE_ENV=production nodemon",
    "start:staging": "NODE_ENV=staging nodemon",
    "start:staging:watch": "NODE_ENV=staging nodemon",
    "start:dev": "cross-env NODE_ENV=dev nodemon",
    "start:dev:watch": "NODE_ENV=dev nodemon",
    "prestart:prod": "tsc",
    "start:prod": "NODE_ENV=production node dist/src/main.js",
    "test": "jest --config=jest.json",
    "test:watch": "jest --watch --config=jest.json",
    "test:coverage": "jest --config=jest.json --coverage --coverageDirectory=coverage",
    "generate-model:dev": "dotenv -e=.env.dev -- cross-var typeorm-model-generator -h $DB_HOST -d $DB_DATABASE -p $DB_PORT -u sa -x $DB_PASSWORD -e mssql --case-file param --suffix-file .entity --suffix-class Entity -o ./src",
    "generate-model:staging": "dotenv -e=.env.staging -- cross-var typeorm-model-generator -h $DB_HOST -d $DB_DATABASE -p $DB_PORT -u sa -x $DB_PASSWORD -e mssql --case-file param --suffix-file .entity --suffix-class Entity -o ./src",
    "generate-model": "dotenv -e=.env.production -- cross-var typeorm-model-generator -h $DB_HOST -d $DB_DATABASE -p $DB_PORT -u sa -x $DB_PASSWORD -e mssql --case-file param --suffix-file .entity --suffix-class Entity -o ./src",
    "docker-build": "docker build -t sysco-be:latest ."
  },
  "license": "ISC",
